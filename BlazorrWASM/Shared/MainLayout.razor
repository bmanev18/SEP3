
@inherits LayoutComponentBase
@using Login

<MudThemeProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="background-color: #16a085;">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <LoginButtons />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2" Style="background-color: #16a085;">
        <MudDrawerHeader>
            <MudText Typo="Typo.h5" Class="mt-1 text-white">Project Planner</MudText>

        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    
    <MudMainContent>
        @Body
    </MudMainContent>
</MudLayout>



@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}